<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/primary_darker</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="editFormSpan">
        <item name="android:textColor">@color/editFormSpan</item>
    </style>

    <style name="editForm">
        <item name="android:textColor">@color/editForm</item>
        <item name="android:textColorHint">@color/editFormHint</item>
    </style>

    <style name="buttonForm">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@color/primary_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="requisito_funcional">
        <item name="android:visibility">gone</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/iron</item>
    </style>

    <style name="menuSpan">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="menuIcon">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="containerHorizontal">
        <item name="android:layout_marginBottom">40dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="menuLateralFixo">
        <item name="android:layout_width">100dp</item>
    </style>

    <style name="menuPrincipalContainer">
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="menuPrincipalIcon">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="menuPrincipalSpan">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
