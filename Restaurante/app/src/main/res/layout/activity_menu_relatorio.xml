<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ds2.restaurante.MenuRelatorio">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/containerHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/menuIcon"
                        android:src="@drawable/ic_report" />

                    <TextView
                        style="@style/menuSpan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Relatório de comandas ativas" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/menuIcon"
                        android:src="@drawable/ic_report" />

                    <TextView
                        style="@style/menuSpan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Relatório de comandas encerradas" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/containerHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/menuIcon"
                        android:src="@drawable/ic_report" />

                    <TextView
                        style="@style/menuSpan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Relatório de garçons" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/menuIcon"
                        android:src="@drawable/ic_report" />

                    <TextView
                        style="@style/menuSpan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Relatório de despesas" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/containerHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/menuIcon"
                        android:src="@drawable/ic_report" />

                    <TextView
                        style="@style/menuSpan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Relatório de arrecadação líquida" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                </LinearLayout>
            </LinearLayout>


            <TextView
                style="@style/requisito_funcional"
                android:text="RF18. Gerar relatório de comandas ativas\nRF30. Geração de relatório de itens por produto.\nRF36. Gerar relatório de garçons\nRF37. Geração de relatórios das comandas encerradas\nRF38. Geração de relatórios de despesas\nRF39. Geração de relatórios da arrecadação líquida" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
