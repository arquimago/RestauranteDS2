<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ds2.equipe1.restaurante.MenuItens">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/containerHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/menu_cadastrar_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/menuIcon"
                        android:src="@drawable/ic_ingredients" />

                    <TextView
                        style="@style/menuSpan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cadastrar Item" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu_buscar_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/menuIcon"
                        android:src="@drawable/ic_ingredients" />

                    <TextView
                        style="@style/menuSpan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buscar Item" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/containerHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/menu_alterar_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/menuIcon"
                        android:src="@drawable/ic_ingredients" />

                    <TextView
                        style="@style/menuSpan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alterar/Excluir Item" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu_relatorio_itens"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/menuIcon"
                        android:src="@drawable/ic_ingredients" />

                    <TextView
                        style="@style/menuSpan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Relatório de itens cadastrados" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/containerHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/menu_relatorio_itens_falta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/menuIcon"
                        android:src="@drawable/ic_ingredients" />

                    <TextView
                        style="@style/menuSpan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gerar relatório de itens em falta" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>


            <TextView
                style="@style/requisito_funcional"
                android:text="RF7. Inclusão dos itens\nRF8. Alteração de itens\nRF9. Exclusão de itens\nRF10. Consulta de itens\nRF11. Geração de relatório de itens\nRF13. Geração de relatório de Itens em falta" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
